@model Hosting.Models.Home.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

    <div class="jumbotron">
        <h1>Бесплатный хостинг. 30 дней!</h1>
        <p class="lead">Пробный период без ограничений</p>
        <p><a href="http://asp.net" class="btn btn-info btn-lg">Попробовать сейчас &raquo;</a></p>
    </div>

    <div class="row">
        @foreach (var plan in Model.HostingPlans)
        {
            <div class="col-md-4 box" onclick="location.href='@Url.Action("About","Home")'">
                <h2>@plan.Name</h2>
                <p>@plan.Price грн/мес</p>

                <p>
                    @plan.Description
                </p>
                <p><a class="btn btn-info" href="http://go.microsoft.com/fwlink/?LinkId=301865">Выбрать</a></p>

                @foreach (var feature in plan.Features)
                {
                    <p>- @feature.Name</p>
                }
            </div>
        }
    </div>
